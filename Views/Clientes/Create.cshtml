@model GestionVentas.Models.Cliente

@{
    ViewData["Title"] = "Create";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<div class="container mt-5">
	<div class="card shadow rounded-4 p-4 mx-auto" style="max-width: 600px;">
		<h3 class="text-center text-primary mb-4">
			<i class="fas fa-plus-circle me-2"></i>Agregar Nuevo Cliente
		</h3>
	
	 <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
		<div class="mb-3">
			<label asp-for="Nombre" class="form-label">
				<i class="fas fa-user me-1"></i> Nombre del Cliente
			</label>
			<input asp-for="Nombre" class="form-control" placeholder="Ej. Juan Pérez" />
			<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
		<div class="mb-3">
			<label asp-for="Telefono" class="form-label">
				<i class="fas fa-user me-1"></i> Telefono
			</label>
			<input asp-for="Telefono" class="form-control" placeholder="Ej. 2525-2525" />
			<span asp-validation-for="Telefono" class="text-danger"></span>
			</div>
		<div class="mb-3">
			<label asp-for="EmpresaID" class="form-control">
				<i class="fas fa-building me-1"></i> Empresa
			</label>
			<select asp-for="EmpresaID" class="form-select" asp-items="ViewBag.EmpresaID">
				<option value="">Seleccione una empresa</option>
			</select>
			<span asp-validation-for="EmpresaID" class="text-danger"></span>
			</div>
		<div class="mb-3">
			<label asp-for="NIT" class="form-control">
				<i class="fas fa-id-card me-1"></i> NIT
			</label>
			<input asp-for="NIT" class="form-control" placeholder="Ej. 1234-567890-123-4" />
			<span asp-validation-for="NIT" class="text-danger"></span>
			</div>
		<div class="mb-3">
			<label asp-for="DUI" class="form-control">
				<i class="fas fa-id-card me-1"></i> DUI
			</label>
			<input asp-for="DUI" class="form-control" placeholder="Ej. 01234567-8" />
			<span asp-validation-for="DUI" class="text-danger"></span>
			</div>
		<div class="d-grid gap-2">
			<button type="submit" class="btn btn-success btn-lg">
				<i class="fas fa-save me-1"></i> Guardar Usuario
			</button>
			<a asp-action="Index" class="btn btn-outline-secondary">
				<i class="fas fa-arrow-left me-1"></i> Volver a la Lista
			</a>
		</div>
		</form>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
