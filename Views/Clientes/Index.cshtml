@model IEnumerable<GestionVentas.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<div class="container mt-5">
	<div class="card shadow-lg rounded-4 p-4">
		<div class="d-flex justify-content-between align-items-center mb-4">
			<h2 class="text-primary mb-0">Clientes del Sistema</h2>
			<a asp-action="Create" class="btn btn-success rounded-pill">
				<i class="fas fa-user-plus me-1"></i> Crear nuevo
			</a>
		</div>
	
    <table class="table table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Nombre)
            </th>
            <th>
             @Html.DisplayNameFor(model => model.First().NIT)
            </th>
            <th>
             @Html.DisplayNameFor(model => model.First().DUI)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.First().Telefono)
            </th>
            <th>
              @Html.DisplayNameFor(model => model.First().Empresa)
            </th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NIT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DUI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Nombre)
            </td>
             <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.ClienteID" class="btn btn-sm btn-outline-primary me-1 rounded-pill">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ClienteID" class="btn btn-sm btn-outline-info me-1 rounded-pill">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ClienteID" class="btn btn-sm btn-outline-danger rounded-pill">
                            <i class="fas fa-trash-alt"></i>
                        </a>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>

