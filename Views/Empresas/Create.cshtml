@model GestionVentas.Models.Empresa

@{
    ViewData["Title"] = "Create";
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<body class="bg-light">
	<div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-light">
		<div class="card shadow rounded-4 p-4 mx-auto" style="max-width: 600px;">
			<h3 class="text-center text-primary mb-4">
				<i class="fas fa-building me-2"></i>Agregar Nueva Empresa
			</h3>
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>


				<div class="mb-3">
					<label asp-for="Nombre" class="form-label">
						<i class="fas fa-building me-1"></i> Nombre de la Empresa
					</label>
					<input asp-for="Nombre" class="form-control" placeholder="Ej. Mi Empresa S.A." />
					<span asp-validation-for="Nombre" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="NIT" class="form-label">
						<i class="fas fa-id-card me-1"></i> NIT
					</label>
					<input asp-for="NIT" class="form-control" placeholder="Ej. 123456789" />
					<span asp-validation-for="NIT" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Giro" class="form-label">
						<i class="fas fa-briefcase me-1"></i> Giro de la Empresa
					</label>
					<input asp-for="Giro" class="form-control" placeholder="Ej. Servicios de Tecnología" />
					<span asp-validation-for="Giro" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Direccion" class="form-label">
						<i class="fas fa-map-marker-alt me-1"></i> Dirección
					</label>
					<input asp-for="Direccion" class="form-control" placeholder="Ej. Calle 123 #45-67" />
					<span asp-validation-for="Direccion" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Telefono" class="form-label">
						<i class="fas fa-phone me-1"></i> Teléfono
					</label>
					<input asp-for="Telefono" class="form-control" placeholder="Ej. (123) 456-7890" />
					<span asp-validation-for="Telefono" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Estado">
						<i class="fas fa-toggle-on me-1"></i> Estado
					</label>
					<div class="form-check form-switch">
						<input class="form-check-input" type="checkbox" asp-for="Estado" />
						<label class="form-check-label" asp-for="Estado">Activo</label>
					</div>
				</div>
				<div class="mb-3">
					<label asp-for="ActividaEconomica">
						<i class="fas fa-chart-line me-1"></i> Actividad Económica
					</label>
					<input asp-for="ActividaEconomica" class="form-control" placeholder="Ej. 621" />
					<span asp-validation-for="ActividaEconomica" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Departamento">
						<i class="fas fa-map me-1"></i> Departamento
					</label>
					<input asp-for="Departamento" class="form-control" placeholder="Ej.San Salvador" />
					<span asp-validation-for="Departamento" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="Municipio">
						<i class="fas fa-map-marker me-1"></i> Municipio
					</label>
					<input asp-for="Municipio" class="form-control" placeholder="Ej. San Salvador" />
					<span asp-validation-for="Municipio" class="text-danger"></span>
				</div>
				<div class="d-grid gap-2">
					<button type="submit" class="btn btn-success btn-lg">
						<i class="fas fa-save me-1"></i> Guardar Empresa
					</button>
					<a asp-action="Index" class="btn btn-outline-secondary">
						<i class="fas fa-arrow-left me-1"></i> Volver a la Lista
					</a>
				</div>
			</form>
		</div>
	</div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
