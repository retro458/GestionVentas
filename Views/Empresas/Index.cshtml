@model IEnumerable<GestionVentas.Models.Empresa>

@{
    ViewData["Title"] = "Gestion de Empresas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-primary mb-0">Empresas Registradas</h2>
            <a asp-action="Create" class="btn btn-success rounded-pill">
                <i class="fas fa-user-plus me-1"></i> Agregar Empresa
            </a>
        </div>

        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NIT)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Giro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Direccion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Telefono)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().ActividaEconomica)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Departamento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Municipio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Estado)
                    </th>
                    <th class="text-end">Acciones </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@item.Nombre</td>
                        <td>@item.NIT</td>
						<td>@item.Giro</td>
						<td>@item.Direccion</td>
                        <td>@item.Telefono</td>
						<td>@item.ActividaEconomica</td>
						<td>@item.Departamento</td>
						<td>@item.Municipio</td>

                        <td>
                            @if (item.Estado)
                            {
                                <span class="badge bg-success">Activo</span>

                            }
                            else
							{
								<span class="badge bg-danger">Inactivo</span>
							}
                        </td>
                        <td class="text-end"></td>
            <td>
                            <a asp-action="Edit" asp-route-id="@item.EmpresaID" class="btn btn-sm btn-outline-primary me-1 rounded-pill">
								<i class="fas fa-edit"></i>
                            </a> 
                            <a asp-action="Details" asp-route-id="@item.EmpresaID" class="btn btn-sm btn-outline-primary me-1 rounded-pill">
								<i class="fas fa-eye"></i>
                            </a> 
                            <a asp-action="Delete" asp-route-id="@item.EmpresaID" class="btn btn-sm btn-outline-primary me-1 rounded-pill">
								<i class="fas fa-trash-alt"></i>
                            </a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>