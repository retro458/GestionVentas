@{
    ViewData["Title"] = "Generar Factura";
}

<h2>Generar Factura</h2>

<form asp-action="FirmarFactura" method="post">
    <button type="submit" class="btn btn-primary">Generar Factura</button>
</form>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">@TempData["mensaje"]</div>
}

@if (TempData["jsonFactura"] != null)
{
    <h4>Factura Generada (JSON):</h4>
    <pre>@TempData["jsonFactura"]</pre>

    <form asp-action="EnviarAFakeHacienda" method="post">
        <button type="submit" class="btn btn-success">Enviar a Hacienda</button>
    </form>
}