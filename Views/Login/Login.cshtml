@using GestionVentas.ViewsModels
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            width: 900px;
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.1);
            display: flex;
            overflow: hidden;
        }

        .form-section {
            flex: 1;
            padding: 50px 40px;
        }

            .form-section h2 {
                font-weight: 700;
                margin-bottom: 20px;
                text-align: center;
                color: #343a40;
            }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            font-size: 1rem;
        }

        .btn-login {
            background-color: #ff4b5c;
            border: none;
            color: #fff;
            padding: 12px;
            font-weight: 600;
            border-radius: 10px;
            width: 100%;
            margin-top: 10px;
        }

            .btn-login:hover {
                background-color: #e8434f;
            }

        .forgot-password {
            font-size: 0.85rem;
            text-decoration: none;
            color: #6c757d;
        }

            .forgot-password:hover {
                text-decoration: underline;
            }

        .image-section {
            background: #f4f7fe;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 30px;
        }

            .image-section img {
                width: 260px;
                max-width: 100%;
                margin-bottom: 20px;
            }

            .image-section h5 {
                font-weight: bold;
                color: #333;
            }

            .image-section p {
                color: #666;
                text-align: center;
                font-size: 0.95rem;
            }

        .text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <!-- Formulario -->
        <div class="form-section">
            <h2>Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Usuario" class="form-control" placeholder="Usuario" />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 text-end">
                    <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn btn-login">Ingresar</button>
            </form>
        </div>

        <!-- Imagen -->
        <div class="image-section">
            <img src="@Url.Content("~/images/trabajo-en-equipo-grupo-figurativo-de-equipo-de-trabajo.jpg")" alt="Bienvenida" />
            <h5>¡Bienvenido!</h5>
            <p>Ingresa tus credenciales para acceder al sistema interno.</p>
        </div>
    </div>

    <!-- Scripts necesarios -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>